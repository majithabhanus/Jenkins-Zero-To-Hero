pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        echo "Checkout stage passed"
        git branch: 'main', url: 'https://github.com/majithabhanus/Jenkins-Zero-To-Hero.git'
      }
    }

    stage('Build and Test') {
      agent {
        docker {
          image 'maven:3.9.6-eclipse-temurin-17'
          args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      steps {
        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
          sh 'ls -ltr'
          sh 'mvn clean package'
        }
      }
    }

  stage('Build and SonarQube Analysis') {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-17'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        SONAR_URL = "http://3.91.19.0:9000"
    }
    steps {
        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
            sh 'ls -ltr'

            // Build the project
            sh 'mvn clean package'

            // Run SonarQube analysis with a safe temp directory
            withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                sh """
                    echo "Running SonarQube Scan"
                    mvn sonar:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=$SONAR_URL \
                        -Djava.io.tmpdir=/tmp
                """
            }
        }
    }
}

stage('Build and Push Docker Image') {
  environment {
    DOCKER_IMAGE = "majithas/jenkins:${BUILD_NUMBER}"
  }
  steps {
    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
      sh 'ls -l target'   // debug & safety

      script {
        def dockerImage = docker.build("${DOCKER_IMAGE}")
        docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
          dockerImage.push()
        }
      }
    }
  }
}

stage('Update Deployment File') {
      steps {
        checkout scm
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh """
            git config user.email "majithabhanus@gmail.com"
            git config user.name "majithabhanus"
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
            git push https://${GITHUB_TOKEN}@github.com/majithabhanus/Jenkins-Zero-To-Hero HEAD:main
          """
        }
      }
    }
  }
}
